@model GamesSharp.Models.Publisher

@{
    ViewData["Title"] = "Редактировать издателя";
}

<div class="container mt-4">
    <h1><i class="bi bi-pencil"></i> Редактировать издателя</h1>
    <hr />
    
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Country" class="control-label"></label>
                    <input asp-for="Country" class="form-control" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="FoundedYear" class="control-label"></label>
                    <input asp-for="FoundedYear" class="form-control" type="number" />
                    <span asp-validation-for="FoundedYear" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Website" class="control-label"></label>
                    <input asp-for="Website" class="form-control" type="url" placeholder="https://example.com" />
                    <span asp-validation-for="Website" class="text-danger"></span>
                </div>
                
                <div class="form-group mt-4">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
