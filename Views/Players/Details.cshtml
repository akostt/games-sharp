@model GamesSharp.Models.Player

@{
    ViewData["Title"] = "Детали игрока";
}

<div class="container mt-4">
    <h1><i class="bi bi-person"></i> Детали игрока</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
        
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
        
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Phone)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Phone)</dd>
        
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.RegisteredDate)</dt>
        <dd class="col-sm-9">@Model.RegisteredDate.ToString("yyyy-MM-dd")</dd>
    </dl>
</div>

<div class="mt-4">
    <h3><i class="bi bi-calendar-event"></i> Игровые сессии</h3>
    @if (Model.SessionPlayers.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Игра</th>
                    <th>Дата</th>
                    <th>Статус</th>
                    <th>Очки</th>
                    <th>Победитель</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var sp in Model.SessionPlayers)
                {
                    <tr>
                        <td>@sp.GameSession.Game.Name</td>
                        <td>@sp.GameSession.ScheduledDate.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@sp.GameSession.Status</td>
                        <td>@(sp.Score.HasValue ? sp.Score.Value.ToString() : "-")</td>
                        <td>@(sp.IsWinner ? "Да" : "-")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">Нет игровых сессий.</p>
    }
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
        <i class="bi bi-pencil"></i> Редактировать
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Назад к списку
    </a>
</div>
</div>
