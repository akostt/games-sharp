@model IEnumerable<GamesSharp.Models.Player>

@{
    ViewData["Title"] = "Игроки";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">
            <i class="bi bi-people"></i> Игроки
        </h1>
        <a asp-action="Create" class="btn btn-success btn-lg">
            <i class="bi bi-person-plus"></i> Добавить игрока
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th><i class="bi bi-person"></i> @Html.DisplayNameFor(model => model.Name)</th>
                        <th><i class="bi bi-envelope"></i> @Html.DisplayNameFor(model => model.Email)</th>
                        <th><i class="bi bi-telephone"></i> @Html.DisplayNameFor(model => model.Phone)</th>
                        <th><i class="bi bi-geo-alt"></i> Город</th>
                        <th><i class="bi bi-calendar-check"></i> Дата регистрации</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model) {
                    <tr>
                        <td>
                            <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
                            @if (item.BirthDate.HasValue)
                            {
                                var age = DateTime.Now.Year - item.BirthDate.Value.Year;
                                <br/><small class="text-muted"><i class="bi bi-cake2"></i> @age лет</small>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Email))
                            {
                                <a href="mailto:@item.Email" class="text-decoration-none">
                                    <i class="bi bi-envelope"></i> @item.Email
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Phone))
                            {
                                <a href="tel:@item.Phone" class="text-decoration-none">
                                    <i class="bi bi-telephone"></i> @item.Phone
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.City))
                            {
                                <i class="bi bi-geo-alt-fill"></i> @item.City
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            <i class="bi bi-calendar3"></i> @item.RegisteredDate.ToString("dd.MM.yyyy")
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Подробности">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Редактировать">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Удалить">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
            }
                </tbody>
            </table>
        </div>
    </div>
    
    @if (!Model.Any())
    {
        <div class="alert alert-info mt-3" role="alert">
            <i class="bi bi-info-circle"></i> Нет зарегистрированных игроков. <a asp-action="Create" class="alert-link">Добавьте первого игрока!</a>
        </div>
    }
</div>
