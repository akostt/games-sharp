@model GamesSharp.Models.Equipment

@{
    ViewData["Title"] = "Удалить оборудование";
}

<div class="container mt-4">
    <h1><i class="bi bi-trash"></i> Удалить оборудование</h1>
    <h3 class="text-danger">Вы уверены, что хотите удалить это оборудование?</h3>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Type)</dt>
            <dd class="col-sm-9">@(string.IsNullOrWhiteSpace(Model.Type) ? "-" : Model.Type)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Quantity)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Quantity)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Удалить" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-x-circle"></i> Отмена</a>
        </form>
    </div>
</div>
