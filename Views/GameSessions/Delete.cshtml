@model GamesSharp.Models.GameSession

@{
    ViewData["Title"] = "Delete Game Session";
}

<h1>Delete Game Session</h1>

<h3>Are you sure you want to delete this game session?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Game</dt>
        <dd class="col-sm-9">@Model.Game.Name</dd>
        
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ScheduledDate)</dt>
        <dd class="col-sm-9">@Model.ScheduledDate.ToString("yyyy-MM-dd HH:mm")</dd>
        
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Location)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Location)</dd>
        
        <dt class="col-sm-3">Players</dt>
        <dd class="col-sm-9">@Model.SessionPlayers.Count</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
