@model GamesSharp.Models.GameSession

@{
    ViewData["Title"] = "Удалить сессию";
}

<div class="container mt-4">
    <h1><i class="bi bi-trash"></i> Удалить игровую сессию</h1>
    <h3 class="text-danger">Вы уверены, что хотите удалить эту сессию?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Игра</dt>
        <dd class="col-sm-9">@(Model.Game?.Name ?? "-")</dd>
        
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ScheduledDate)</dt>
        <dd class="col-sm-9">@Model.ScheduledDate.ToString("dd.MM.yyyy")</dd>
        
        <dt class="col-sm-3">Место проведения</dt>
        <dd class="col-sm-9">@(Model.Venue?.Name ?? "-")</dd>
        
        <dt class="col-sm-3">Игроков</dt>
        <dd class="col-sm-9">@Model.SessionPlayers.Count</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-x-circle"></i> Отмена</a>
    </form>
</div>
</div>
