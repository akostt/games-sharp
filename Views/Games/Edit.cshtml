@model GamesSharp.Models.Game

@{
    ViewData["Title"] = "Редактировать игру";
}

<div class="container mt-4">
    <h1><i class="bi bi-pencil"></i> Редактировать игру</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CategoryId" class="control-label"></label>
                <input asp-for="CategoryId" class="form-control" />
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="MinPlayers" class="control-label"></label>
                        <input asp-for="MinPlayers" class="form-control" type="number" min="1" />
                        <span asp-validation-for="MinPlayers" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="MaxPlayers" class="control-label"></label>
                        <input asp-for="MaxPlayers" class="form-control" type="number" min="1" />
                        <span asp-validation-for="MaxPlayers" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mb-3">
                <label asp-for="AverageDuration" class="control-label"></label>
                <input asp-for="AverageDuration" class="form-control" type="number" min="1" />
                <span asp-validation-for="AverageDuration" class="text-danger"></span>
                <small class="form-text text-muted">Длительность в минутах</small>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Назад к списку</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
