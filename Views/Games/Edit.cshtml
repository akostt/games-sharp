@model GamesSharp.Models.Game

@{
    ViewData["Title"] = "Редактировать игру";
}

<div class="container mt-4">
    <h1><i class="bi bi-pencil"></i> Редактировать игру</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="PublisherId" class="control-label">Издатель</label>
                        <select asp-for="PublisherId" class="form-select" asp-items="ViewBag.PublisherId">
                            <option value="">-- Выберите издателя --</option>
                        </select>
                        <span asp-validation-for="PublisherId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            @if (ViewBag.AllCategories != null && ((List<GamesSharp.Models.GameCategory>)ViewBag.AllCategories).Any())
            {
                <div class="card mb-3">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="bi bi-tags"></i> Категории</h5>
                    </div>
                    <div class="card-body">
                        <p class="text-muted">Можно выбрать несколько категорий:</p>
                        @{
                            var selectedCategoryIds = (List<int>)ViewBag.SelectedCategoryIds;
                        }
                        @foreach (var category in (List<GamesSharp.Models.GameCategory>)ViewBag.AllCategories)
                        {
                            var isSelected = selectedCategoryIds.Contains(category.Id);
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox"
                                       name="selectedCategoryIds" value="@category.Id"
                                       id="category_@category.Id"
                                       @(isSelected ? "checked" : "") />
                                <label class="form-check-label" for="category_@category.Id">
                                    <strong>@category.Name</strong>
                                    @if (!string.IsNullOrWhiteSpace(category.Description))
                                    {
                                        <small class="text-muted d-block">@category.Description</small>
                                    }
                                </label>
                            </div>
                        }
                    </div>
                </div>
            }
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="YearPublished" class="control-label"></label>
                        <input asp-for="YearPublished" class="form-control" type="number" />
                        <span asp-validation-for="YearPublished" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Complexity" class="control-label"></label>
                        <input asp-for="Complexity" class="form-control" type="number" min="1" max="10" />
                        <span asp-validation-for="Complexity" class="text-danger"></span>
                        <small class="form-text text-muted">От 1 до 10</small>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="MinPlayers" class="control-label"></label>
                        <input asp-for="MinPlayers" class="form-control" type="number" min="1" />
                        <span asp-validation-for="MinPlayers" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="MaxPlayers" class="control-label"></label>
                        <input asp-for="MaxPlayers" class="form-control" type="number" min="1" />
                        <span asp-validation-for="MaxPlayers" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="MinAge" class="control-label"></label>
                        <input asp-for="MinAge" class="form-control" type="number" min="0" />
                        <span asp-validation-for="MinAge" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mb-3">
                <label asp-for="AverageDuration" class="control-label"></label>
                <input asp-for="AverageDuration" class="form-control" type="number" min="1" />
                <span asp-validation-for="AverageDuration" class="text-danger"></span>
                <small class="form-text text-muted">Длительность в минутах</small>
            </div>
            @if (ViewBag.AllEquipment != null && ((List<GamesSharp.Models.Equipment>)ViewBag.AllEquipment).Any())
            {
                <div class="card mt-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="bi bi-tools"></i> Необходимое оборудование</h5>
                    </div>
                    <div class="card-body">
                        <p class="text-muted">Выберите оборудование, которое требуется для этой игры:</p>
                        @{
                            var selectedEquipment = (List<int>)ViewBag.SelectedEquipment;
                            var equipmentQuantities = (Dictionary<int, int>)ViewBag.EquipmentQuantities;
                        }
                        @foreach (var equipment in (List<GamesSharp.Models.Equipment>)ViewBag.AllEquipment)
                        {
                            var isSelected = selectedEquipment.Contains(equipment.Id);
                            var quantity = equipmentQuantities.ContainsKey(equipment.Id) ? equipmentQuantities[equipment.Id] : 1;
                            
                            <div class="row mb-3 align-items-center">
                                <div class="col-md-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" 
                                               name="selectedEquipment" value="@equipment.Id" 
                                               id="equipment_@equipment.Id"
                                               @(isSelected ? "checked" : "")
                                               onchange="toggleQuantityInput(@equipment.Id)" />
                                        <label class="form-check-label" for="equipment_@equipment.Id">
                                            <strong>@equipment.Name</strong>
                                            @if (!string.IsNullOrWhiteSpace(equipment.Type))
                                            {
                                                <span class="badge bg-secondary">@equipment.Type</span>
                                            }
                                            <small class="text-muted d-block">В наличии: @equipment.Quantity</small>
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-text">Требуется:</span>
                                        <input type="number" class="form-control" 
                                               name="equipmentQuantities[@equipment.Id]" 
                                               id="quantity_@equipment.Id"
                                               min="1" value="@quantity" 
                                               @(!isSelected ? "disabled" : "") />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
            
            <div class="form-group mt-3">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Назад к списку</a>
            </div>
        </form>
    </div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function toggleQuantityInput(equipmentId) {
            const checkbox = document.getElementById('equipment_' + equipmentId);
            const quantityInput = document.getElementById('quantity_' + equipmentId);
            
            if (checkbox.checked) {
                quantityInput.disabled = false;
                quantityInput.required = true;
            } else {
                quantityInput.disabled = true;
                quantityInput.required = false;
            }
        }
    </script>
}
