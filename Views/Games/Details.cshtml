@model GamesSharp.Models.Game

@{
    ViewData["Title"] = "Детали игры";
}

<div class="container mt-4">
    <h1><i class="bi bi-dice-5"></i> Детали игры</h1>
    <hr />
    
    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-9"><strong>@Html.DisplayFor(model => model.Name)</strong></dd>
                
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Description)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
                
                <dt class="col-sm-3">Категория</dt>
                <dd class="col-sm-9">@(Model.Category?.Name ?? "-")</dd>
                
                <dt class="col-sm-3">Издатель</dt>
                <dd class="col-sm-9">@(Model.Publisher?.Name ?? "-")</dd>
                
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.MinPlayers)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MinPlayers)</dd>
                
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.MaxPlayers)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MaxPlayers)</dd>
                
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.AverageDuration)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.AverageDuration) мин</dd>
                
                @if (Model.Complexity.HasValue)
                {
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Complexity)</dt>
                    <dd class="col-sm-9">@Model.Complexity / 10</dd>
                }
                
                @if (Model.MinAge.HasValue)
                {
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.MinAge)</dt>
                    <dd class="col-sm-9">@Model.MinAge+</dd>
                }
                
                @if (Model.YearPublished.HasValue)
                {
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.YearPublished)</dt>
                    <dd class="col-sm-9">@Model.YearPublished</dd>
                }
            </dl>
        </div>
    </div>

    @if (Model.GameEquipments.Any())
    {
        <div class="card mt-4">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-tools"></i> Необходимое оборудование</h5>
            </div>
            <div class="card-body">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Название</th>
                            <th>Тип</th>
                            <th>Требуется</th>
                            <th>В наличии</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ge in Model.GameEquipments)
                        {
                            <tr>
                                <td><strong>@ge.Equipment?.Name</strong></td>
                                <td>@(string.IsNullOrWhiteSpace(ge.Equipment?.Type) ? "-" : ge.Equipment.Type)</td>
                                <td><span class="badge bg-primary">@ge.RequiredQuantity</span></td>
                                <td><span class="badge bg-info">@ge.Equipment?.Quantity</span></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    <div class="mt-4">
        <h3><i class="bi bi-calendar-event"></i> Игровые сессии</h3>
        @if (Model.GameSessions.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Дата</th>
                        <th>Статус</th>
                        <th>Место</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var session in Model.GameSessions)
                    {
                        <tr>
                            <td>@session.ScheduledDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@session.Status</td>
                            <td>@(session.Venue?.Name ?? "-")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">Нет запланированных сессий.</p>
        }
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Редактировать
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Назад к списку
        </a>
    </div>
</div>

